{
  "compilerOptions": {
    "alwaysStrict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "paths": {
      "components/*": ["src/app/components/*"],
      "containers/*": ["src/app/containers/*"],
      "app/*": ["src/app/*"],
      "base": ["src/base/index"],
      "base/*": ["src/base/*"],
      "assets/*": ["src/app/assets/*"],
      "types": ["src/app/types/index"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "**/*.spec.tsx"],
  "paths": {
    "*": ["src/types/*", "*"],
    "@app/*": ["src/app/*"],
    "@base/*": ["src/base/*"],
    "@assets/*": ["src/app/assets/*"],
    "services/*": ["services/*"]
  },
  "typeRoots": ["node_modules/@types", "src/types"]
}
